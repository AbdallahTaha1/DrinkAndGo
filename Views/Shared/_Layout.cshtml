<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - DrinkAndGo</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/lib/slicknav/slicknav.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/DrinkAndGo.styles.css" asp-append-version="true" />
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
</head>
<body>
    <div class="main-navbar shadow-lg sticky-top bg-light">
        <div class="top-navbar bg-primary py-2">
            <div class="container-fluid">
                <div class="row align-items-center">
                    <div class="col-md-2 d-none d-md-block">
                        <h5 class="text-white fw-bold">Drink & Go 🍷</h5>
                    </div>
                    <div class="col-md-5">
                        <form class="d-flex">
                            <input class="form-control me-2" type="search" placeholder="Search your product" aria-label="Search">
                            <button class="btn btn-light" type="submit"><i class="fa fa-search"></i></button>
                        </form>
                    </div>
                    <div class="col-md-5">
                        <ul class="nav justify-content-end">
                            <li class="nav-item">
                                <a class="nav-link text-white" asp-action="index" asp-controller="ShoppingCart">
                                    <i class="fa fa-shopping-cart"></i> @await Component.InvokeAsync("ShoppingCartSummary")
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-white" href="#">
                                    <i class="fa fa-heart"></i> Wishlist (0)
                                </a>
                            </li>
                            @await Html.PartialAsync("LoginPartial")
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
            <div class="container-fluid">
                <a class="navbar-brand d-block d-md-none" href="#">Drink & Go 🍷</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="home" asp-action="index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="drink" asp-action="list">All Categories</a>
                        </li>
                        <li class="nav-item">
                            @await Component.InvokeAsync("CategoryMenu")
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </div>
    <div class="container py-5">
        @RenderBody()
        <hr />
        <footer class="text-center py-3">
            <p><a target="_blank" href="https://github.com/AbdallahTaha1/DrinkAndGo" class="text-decoration-none">&copy; 2025 - Abdullah Taha</a></p>
        </footer>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/lib/slicknav/jquery.slicknav.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
